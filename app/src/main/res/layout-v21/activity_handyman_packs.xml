<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteFik"
    android:orientation="vertical"
    tools:context=".handyman.HandymanPacks">

    <!-- Top App Bar-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:scaleX="-2"
        android:src="@drawable/top_app_bar" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_credits"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:elevation="100dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Buy credits"
        android:textColor="@color/WhiteFik"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!--  Credits Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_credits"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <!--   50 Credits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/credit_50"
                    android:layout_width="177dp"
                    android:layout_height="84dp"
                    android:scaleX="3"
                    android:scaleY="3"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/credit_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="100dp"
                    android:text="About 3 Responses"
                    android:textColor="#3C0C84"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <Button
                android:id="@+id/buy_50_credit_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/splash_btn"
                android:text="BUY"
                android:textColor="@color/WhiteFik" />

        </LinearLayout>

        <!--   100 Credits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/credit_100"
                    android:layout_width="177dp"
                    android:layout_height="84dp"
                    android:scaleX="3"
                    android:scaleY="3"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/credit_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="100dp"
                    android:text="About 7 Responses"
                    android:textColor="#3C0C84"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <Button
                android:id="@+id/buy_100_credit_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/splash_btn"
                android:text="BUY"
                android:textColor="@color/WhiteFik" />

        </LinearLayout>

        <!--   200 Credits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/credit_200"
                    android:layout_width="177dp"
                    android:layout_height="84dp"
                    android:scaleX="3"
                    android:scaleY="3"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/credit_3" />

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="100dp"
                    android:text="About 15 Responses"
                    android:textColor="#3C0C84"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <Button
                android:id="@+id/buy_200_credit_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/splash_btn"
                android:text="BUY"
                android:textColor="@color/WhiteFik" />

        </LinearLayout>


        <!--   Buy more Credits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bg"
                android:text="BUY CREDITS"
                android:textColor="@color/WhiteFik"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/PurpleFik_1"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/handyman_menu_naivgation" />

    <!--  Bottom App Bar-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_app_bar" />

</RelativeLayout>